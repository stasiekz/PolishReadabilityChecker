FIND_PATH(CRFPP_INCLUDE_DIR crfpp.h /usr/include /usr/local/include )

FIND_LIBRARY(CRFPP_LIBRARY NAMES crfpp PATH /usr/lib /usr/local/lib) 

MARK_AS_ADVANCED(CRFPP_LIBRARY)
MARK_AS_ADVANCED(CRFPP_INCLUDE_DIR)


IF (CRFPP_INCLUDE_DIR AND CRFPP_LIBRARY)
   SET(CRFPP_FOUND TRUE)
ENDIF (CRFPP_INCLUDE_DIR AND CRFPP_LIBRARY)


IF (NOT CRFPP_FOUND)
   IF (CRFPP_FIND_REQUIRED)
      MESSAGE(FATAL_ERROR "Could not find libcrfpp")
   ELSE (CRFPP_FIND_REQUIRED)
      MESSAGE(STATUS "libcrfpp not found")
   ENDIF (CRFPP_FIND_REQUIRED)
ENDIF (NOT CRFPP_FOUND)
